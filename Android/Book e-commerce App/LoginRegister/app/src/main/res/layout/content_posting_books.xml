<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_posting_books"
    tools:context="com.example.ali.loginregister.PostingBooks">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:inputType="textPersonName"

        android:background="@drawable/edittextstyle"

        android:hint="Title"
        android:ems="10"
        android:id="@+id/text_Title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:inputType="textPersonName"
        android:background="@drawable/edittextstyle"
        android:hint="Author"
        android:ems="10"
        android:id="@+id/text_Author"
        android:layout_below="@+id/text_Title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:background="@drawable/edittextstyle"
        android:gravity="top"
        android:lines="12"
        android:hint="Description"
        android:ems="9"
        android:id="@+id/text_Description"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_Author"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:inputType="numberDecimal"
        android:background="@drawable/edittextstyle"
        android:hint="Price"
        android:ems="10"
        android:id="@+id/text_Price"
        android:layout_below="@+id/text_Description"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/edittextstyle"
        android:hint="Email"
        android:ems="10"
        android:id="@+id/text_Email"
        android:layout_below="@+id/text_Price"
        android:layout_alignRight="@+id/text_Price"
        android:layout_alignEnd="@+id/text_Price" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:inputType="phone"
        android:hint="Phone Number"
        android:background="@drawable/edittextstyle"
        android:ems="10"
        android:id="@+id/text_phone"
        android:layout_below="@+id/text_Email"
        android:layout_alignRight="@+id/text_Email"
        android:layout_alignEnd="@+id/text_Email" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post"
        android:id="@+id/button"
        android:layout_below="@+id/text_phone"
        android:layout_toRightOf="@+id/text_phone"
        android:layout_toEndOf="@+id/text_phone" />
</RelativeLayout>