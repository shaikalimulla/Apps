<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_color"
    >

    <TextView android:id="@+id/textTitle" android:textColor="@color/white_color"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_height="wrap_content" android:text="TextView"
        android:layout_width="wrap_content"
        />

    <TextView android:id="@+id/textSinger" android:layout_width="wrap_content" android:textColor="@color/white_color"
        android:layout_height="wrap_content" android:text=""
        />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1"
        >


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >


            <TextView android:id="@+id/textDuration" android:layout_width="wrap_content" android:textColor="@color/white_color"
                android:layout_height="wrap_content" android:text=""

                android:layout_gravity="left"
                />
                    <ImageView
                        android:id="@+id/play_img"
                        android:layout_width="40dp"
                        android:src="@drawable/play"
                        android:layout_height="40dp"
                        android:onClick="playSelected"
                        android:clickable="true"
                        android:layout_gravity="right"

                        />

    </TableRow>
    </TableLayout>

</LinearLayout>
